<style>
  .cta-marquee {
    width: 100%;
    background: #8000ff; /* Morado */
    color: #fff;
    overflow: hidden;
    white-space: nowrap;
    position: relative;
    font-size: 1.1rem;
    font-weight: bold;
    padding: 0.5rem 0;
  }

  .cta-marquee-content {
    display: inline-block;
    padding-left: 100%;
    animation: marquee 25s linear infinite;
  }

  @keyframes marquee {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-100%);
    }
  }
</style>
